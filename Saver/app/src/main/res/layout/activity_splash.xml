<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context=".SplashActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_splash_logo"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/appicon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="113dp"
        android:layout_height="71dp"
        android:layout_below="@+id/iv_splash_logo"
        android:layout_alignStart="@+id/iv_splash_logo"
        android:layout_alignEnd="@+id/iv_splash_logo"
        android:layout_marginStart="8dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="-1dp"
        android:text="Saver App"
        android:textColor="#131F59"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-120dp"
        android:text="All You need to manage bills and budget"
        android:textColor="#2C7E88"
        android:textSize="20sp" />


</RelativeLayout>